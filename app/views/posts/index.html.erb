<% @posts.each do |post| %>
<div class="post_box">
    <div class="post_header">

    <%=image_tag post.user.photo,class: 'prof_pic_small'%>
    <%=link_to post.user.name, users_path(post.user_id)%>
    <span class="timestamp pull-right"><%distance_of_time_in_words(DateTime.now, post.created_at)%>ago</span>
    </div>
        
        <%=image_tag post.photo,class: 'photo'%>
        <div class="post_body">
            <%=link_to post.user.name, users_path(post.user_id)%>
        <%=post.description%>
        </div>
        
        <%=link_to 'View Post',posts_path(post.id)%>
        <% if post.user==current_user%>
        <%=link_to 'Edit Post',edit_posts_path(post.id)%>
        <%=link_to 'Delete Post',posts_path(post.id),method: :delete%>
        <%end%>
    <div class="post_comments">
    <% post.comments.each do |comment|%>
    <%=link_to comment.user.name, users_path(comment.user_id)%><%=comment.text%>
    <% if comment.user==current_user%>
    <%=link_to 'Delete',post_comment_path(post_id: post.id,id: comment.id),method: :delete%>
    <%end%>
    <%end%>
    <%if user_signed_in? %>
    <%=simple_form_for Comment.new,url: posts_comments_path(post),method: :post do |f|%>
    <%=f.input :text,label: 'Comment',placeholder:'Add a comment..'%>
    <%=f.submit 'Post',class: 'btn btn-primary btn-block'%>
    <%end%>
    <%end%>
<%end%>